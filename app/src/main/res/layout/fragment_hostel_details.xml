<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/hostel_intro"
            android:text="@string/hostel_detail_intro"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="40dp"
            android:layout_height="wrap_content"/>

    <RadioButton
            android:id="@+id/radio_school_hostel"
            android:text="I stay in school"
            android:textStyle="bold"
            android:checked="true"
            android:layout_marginBottom="32dp"
            android:layout_below="@+id/hostel_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/hostel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Hostel:"
            android:layout_below="@+id/radio_school_hostel"
            android:layout_height="wrap_content"/>

    <android.support.v7.widget.AppCompatAutoCompleteTextView
            android:id="@+id/hostel_ans"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@+id/hostel"
            android:layout_toRightOf="@+id/hostel"
            android:textStyle="bold"
            android:textSize="18sp"
            android:hint="e.g Angola"
            android:layout_alignBaseline="@+id/hostel"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/block"
            android:textSize="18sp"
            android:text="Block:"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="32dp"
            android:layout_below="@+id/hostel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Spinner
            android:id="@+id/block_name_spinner"
            android:layout_alignBaseline="@+id/block"
            android:layout_toRightOf="@+id/block"
            android:layout_toEndOf="@+id/block"
            android:minWidth="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/room"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="32dp"
            android:text="Room Number:"
            android:layout_below="@+id/block"
            android:layout_height="wrap_content"/>


    <Spinner
            android:id="@+id/room_first_number"
            android:layout_alignBaseline="@+id/room"
            android:layout_toEndOf="@+id/room"
            android:minWidth="50dp"
            android:layout_toRightOf="@+id/room"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <Spinner
            android:id="@+id/room_second_number"
            android:layout_alignBaseline="@+id/room"
            android:layout_toEndOf="@+id/room_first_number"
            android:layout_toRightOf="@+id/room_first_number"
            android:layout_marginRight="5dp"
            android:minWidth="50dp"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <Spinner
            android:id="@+id/room_third_number"
            android:layout_alignBaseline="@+id/room"
            android:layout_toEndOf="@+id/room_second_number"
            android:layout_toRightOf="@+id/room_second_number"
            android:layout_marginRight="5dp"
            android:minWidth="50dp"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <RadioButton
            android:id="@+id/radio_town_hostel"
            android:text="I stay outside school"
            android:textStyle="bold"
            android:checked="false"
            android:layout_marginBottom="32dp"
            android:layout_below="@+id/room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/hostel_town"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Hostel:"
            android:layout_below="@+id/radio_town_hostel"
            android:layout_height="wrap_content"/>

    <android.support.design.widget.TextInputEditText
            android:id="@+id/hostel_town_ans"
            android:layout_width="wrap_content"
            android:enabled="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@+id/hostel_town"
            android:layout_toRightOf="@+id/hostel_town"
            android:textStyle="bold"
            android:textSize="18sp"
            android:hint="e.g Finetouch"
            android:layout_alignBaseline="@+id/hostel_town"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/room_town"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="32dp"
            android:text="Room Number:"
            android:layout_below="@+id/hostel_town"
            android:layout_height="wrap_content"/>

    <android.support.design.widget.TextInputEditText
            android:id="@+id/room_town_ans"
            android:enabled="false"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@+id/room_town"
            android:layout_toRightOf="@+id/room_town"
            android:textStyle="bold"
            android:textSize="18sp"
            android:hint="Block C room 301"
            android:layout_alignBaseline="@+id/room_town"
            android:layout_height="wrap_content"/>

</RelativeLayout>